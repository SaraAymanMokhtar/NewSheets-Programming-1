#include <iostream>
#include <cmath>
#define PI 3.14159
//sheet_1 pb_6
using namespace std;

int main()
{
    double c, b, theta, thetaRad, result;
    cout<< "enter two sides and the included angle"<< endl;
    cout << " first side : " << endl;
    cin >> c;
    cout << " second side : " << endl;
    cin >> b;
    cout << " angle in degrees : " << endl;
    cin >> theta;
    thetaRad = theta * PI / 180;
    result = sqrt(b*b + c*c - 2 * c * b * cos(thetaRad));
    cout << "the result is : " << result << endl;

    return 0;
}
