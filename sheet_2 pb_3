#include <iostream>

using namespace std;
bool isEven(int x);

int main()
{
    int x;
    cout << "enter a number " << endl;
    cin >> x;
    if (isEven(x))
        cout << x << "is even ";
    else
        cout << x << "is odd";
    return 0;
}

bool isEven(int x)
{
    if (x % 2 == 0)
        return true;
    else
        return false;

}
