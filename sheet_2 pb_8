#include <iostream>

using namespace std;


int main()
{
    int x , y;
    char c;
    cout << "input two numbers" << endl;
    cin >> x >> y;
    cout << "enter one of these choices"
         << "(+,-,*,/,a for average, "
         << "l  for max ,s for min " << endl;
    cin >> c;
    switch(c)
    {
        case '+':
            cout << x + y ;
            break;
        case '-':
            cout << x - y;
            break;
        case '*':
            cout << x * y;
            break;
        case '/':
            cout << x / y;
            break;
        case 'a':
            cout << (x + y) / 2;
            break;
        case 'l':
            cout << (x > y ? x : y);
            break;
        case 's':
            cout << (x < y ? x : y);
            break;
        default:
            cout << "you entered an invalid output";
            break;
    }
