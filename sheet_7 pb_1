#include <iostream>

using namespace std;

unsigned long fact (unsigned long x);

int main()
{
    int x;
    cout<< "enter a number " << endl;
    cin>>x;
    cout<< "its factorial is " << fact(x) << endl;
    return 0;
}
unsigned long fact (unsigned long x)
{
    if (x < 1)
        return 1;
    else
        return x * fact(x - 1);
}

